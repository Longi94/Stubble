<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.tlongdev.stubble"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".StubbleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".presentation.ui.activity.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tlongdev.stubble.presentation.ui.activity.MainActivity"/>
        </activity>

        <service
            android:name=".service.SteamCallbackService"
            android:enabled="true"
            android:exported="false">
        </service>
    </application>

</manifest>